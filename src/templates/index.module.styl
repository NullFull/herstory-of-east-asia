.popup
  padding 20px
  background white
  position relative
  strong
    font-size 1.5rem
  p
    margin-top 20px
  .close
    position absolute
    right 10px
    top 10px
    width 25px
    height 25px
    border 0
    display none

@media (min-width: 500px)
  .body
    display flex
    height 100%
    overflow auto
  .list
    max-width 500px
    flex 1 1 0
    overflow auto
  .detail
    flex 1 0 0
    padding 20px
    .popup
      position relative

@media (max-width: 499px)
  .body
    display flex
  .detail
    .dimmer
      position fixed
      top 0
      left 0
      width 100%
      height 100%
      background rgba(123, 200, 201, 0.5)
      display flex
      justify-content center
      padding 20px
  .popup
    .close
      display block
