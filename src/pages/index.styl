html
  font-family sans-serif
*
  margin 0
  padding 0
  box-sizing border-box

.header
  position fixed
  top 0
  left 0
  width 100%
  height 60px
  z-index 30
  .title
    color white
    text-align center
    line-height 1.5
  .language-select
    position absolute
    top 10px
    right 10px
    text-align right

.event-list
  position relative
  max-width 400px
  padding-top 60px
  padding-bottom 100%
  z-index 30
  left 10px
  .event-list-item
    padding 10px
    display flex
    align-items center

    cursor pointer
    color #ffffffde
    background-color rgba(0,0,0,0.4)
    .year
      flex-shrink 0
      radius = 32px
      display inline-block
      font-size 0.6rem
      font-weight lighter
      width radius
      //line-height radius
      //height radius
      //border-radius (radius/2)
      line-height radius*0.7
      height radius*0.7
      //border-radius (radius/2)
      text-align center
      background white
      color black
      margin-right 10px
    .flag
      margin-right 10px
      width 16px
      height 16px
    .title
      font-weight normal
      font-size 1.1rem

.event-detail
  padding 10px
  position fixed
  top 60px
  right 10px
  bottom 80px
  min-width 300px
  max-width 400px
  max-height 400px
  line-height 1.5
  overflow auto
  color #ffffffde
  background rgba(1,1,1,0.85)
  z-index 30
  .title
    padding 5px 0
  .desc
    padding-bottom 2rem
  .country
    text-align right

.footer
  position fixed
  bottom 0
  left 0
  width 100%
  text-align right
  z-index 30
  //color white
  a
    color inherit

.globe
  position fixed
  top 0
  right 0
  color white
  width 100%
  height 100%
  z-index 10

